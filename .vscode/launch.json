            "cwd": "${workspaceFolder}",
            "executable": "esb_ptx/build/merged.hex",
            "interface": "swd",
            "device": "nrf52840_xxAA",
            //           "svdFile": "modules/hal/nordic/nrfx/mdk/nrf52840.svd",
